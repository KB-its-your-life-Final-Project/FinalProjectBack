<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lighthouse.member.mapper.MemberMapper">
    
    <!-- autoMapping으로 자동 매핑 -->
    <resultMap id="memberMap" type="MemberVO" autoMapping="true">
    </resultMap>
    
    <resultMap id="authMap" type="AuthVO" autoMapping="true">
    </resultMap>

    <select id="findAll" resultMap="memberMap">
        SELECT * FROM `member_tbl`
    </select>
    
    <select id="findById" resultMap="memberMap">
        SELECT * FROM `member_tbl` 
        WHERE `id` = #{id}
    </select>


</mapper>